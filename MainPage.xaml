<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:Graf"
             x:Class="Graf.MainPage">
    <ContentPage.Resources>
        <drawable:MyCanvas x:Key="myCanvas"/>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*">
        <GraphicsView Grid.Column="0" Drawable="{StaticResource myCanvas}" x:Name="Canvas" StartInteraction="Canvas_StartInteraction" EndInteraction="Canvas_EndInteraction" DragInteraction="Canvas_DragInteraction">
        </GraphicsView>
    </Grid>

</ContentPage>
